<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mz.community.dao.neo4jMapper.NeoFollowMapper">
    <insert id="insertFollow">
        match(u:User{UserId:#{userId}})
        match(d:User{UserId:#{entityId}})
        create(u)-[:FOLLOWED]->(d)
    </insert>
    <delete id="deleteFollow">
        match (:User{UserId:#{userId}})-[r:FOLLOWED]->(:User{UserId:#{entityId}}) delete r
    </delete>
</mapper>